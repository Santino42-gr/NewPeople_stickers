# Environment Configuration for New People Stickers Bot
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000

# Supabase Configuration (Required for database operations)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Telegram Bot Configuration (Required for bot functionality)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Piapi API Configuration (Required for face swap functionality)
PIAPI_API_KEY=your_piapi_api_key
PIAPI_BASE_URL=https://api.piapi.ai/api/v1

# Optional: Frontend URL for CORS
FRONTEND_URL=https://your-frontend-domain.com

# Optional: API Security
API_KEY=your_optional_api_key_for_admin_endpoints
